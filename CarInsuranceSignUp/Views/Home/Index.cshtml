<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-sm-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign up for our insurance!</h5>
        </div>
        <div class="card-body">
            @using(Html.BeginForm("Signup", "Home", FormMethod.Post))
            {
                <div class="row no-gutters">
                    <div class="form-group col-md-12">
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input name="LastName" type="text" class="form-control" placeholder="Last Name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address"/>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <h5 class="m-0">Date of birth</h5>
                        <input name="DateofBirth" type="date" class="form-control" placeholder="Date of Birth"/>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input name="CarYear" type="number" class="form-control" placeholder="Car Year"/>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />  
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input name="SpeedingTickets" type="number" class="form-control" placeholder="Number of speeding tickets" />
                    </div>
                </div>

                <h5 class="m-0">Do you have a DUI?</h5>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input name="DUI" type="text" class="form-control" placeholder="Enter yes or no" />
                    </div>
                </div>


                <h5 class="m-0">Would you like Full coverage or Liability?</h5>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input name="Coverage" type="text" class="form-control" placeholder="Enter Liability or full coverage" />
                    </div>
                </div>


                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            }
        </div>
    </div>
</div>